datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id            String     @id
  name          String?
  email         String?    @unique
  image         String?
  createdAt     DateTime   @default(now())
  updatedAt     DateTime   @updatedAt
  scenarios     Scenario[]
}

model Scenario {
  id              String   @id @default(cuid())
  name            String
  inputs          Json
  userId          String
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  user            User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}